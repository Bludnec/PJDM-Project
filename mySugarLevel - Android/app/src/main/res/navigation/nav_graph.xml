<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="pjdm.pjdm2021.mysugarlevel.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="pjdm.pjdm2021.mysugarlevel.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_menuFragment_to_diarioFragment"
            app:destination="@id/diarioFragment" />
        <action
            android:id="@+id/action_menuFragment_to_valMedioFragment"
            app:destination="@id/valMedioFragment" />
        <action
            android:id="@+id/action_menuFragment_to_andGiornFragment"
            app:destination="@id/andGiornFragment" />
        <action
            android:id="@+id/action_menuFragment_to_eventiFragment"
            app:destination="@id/eventiFragment" />
    </fragment>
    <fragment
        android:id="@+id/diarioFragment"
        android:name="pjdm.pjdm2021.mysugarlevel.DiarioFragment"
        android:label="fragment_diario"
        tools:layout="@layout/fragment_diario" >
        <action
            android:id="@+id/action_diarioFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/valMedioFragment"
        android:name="pjdm.pjdm2021.mysugarlevel.ValMedioFragment"
        android:label="fragment_val_medio"
        tools:layout="@layout/fragment_val_medio" >
        <action
            android:id="@+id/action_valMedioFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/andGiornFragment"
        android:name="pjdm.pjdm2021.mysugarlevel.AndGiornFragment"
        android:label="fragment_and_giorn"
        tools:layout="@layout/fragment_and_giorn" >
        <action
            android:id="@+id/action_andGiornFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventiFragment"
        android:name="pjdm.pjdm2021.mysugarlevel.EventiFragment"
        android:label="fragment_eventi"
        tools:layout="@layout/fragment_eventi" >
        <action
            android:id="@+id/action_eventiFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
</navigation>